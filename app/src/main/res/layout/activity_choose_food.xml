<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseFood">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choosesnackheader">


        <TextView
            android:textColor="#44594D"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:text="Binus EzyFoody"
            android:textStyle="bold"
            android:textSize="10pt"
            />

        <ImageButton
            android:id="@+id/historybutton"
            android:layout_margin="8dp"
            android:background="#00FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_list_alt_24"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="right"
            android:tint="#44594D"
            />



    </GridLayout>


    <TextView
        android:id="@+id/foodheader"
        android:layout_below="@id/choosesnackheader"
        android:textColor="#44594D"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6BFA3"
        android:text="MENU"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="10pt"
        />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_below="@id/foodheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9D2C0"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerviewmenu"
        android:layout_below="@id/search_bar"/>






</RelativeLayout>