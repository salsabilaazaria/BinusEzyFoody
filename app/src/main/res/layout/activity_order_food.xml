<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFood">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyheader"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttoncategoryborder">


        <TextView
            android:textColor="#44594D"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"

            android:layout_height="wrap_content"
            android:text="Binus EzyFoody"
            android:textStyle="bold"
            android:textSize="10pt"
            />
        <ImageButton
            android:id="@+id/historybutton"
            android:layout_margin="8dp"
            android:background="#00FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_list_alt_24"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="right"
            android:tint="#44594D"
            />



    </GridLayout>

    <ImageView
        android:id="@+id/photoproduct"
        android:layout_below="@id/buyheader"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/avocado"
        android:layout_marginBottom="30dp"/>


        <TextView
            android:layout_below="@id/photoproduct"
            android:id="@+id/productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avocado Juice"
            android:textSize="15pt"
            android:layout_marginLeft="15dp"
            android:layout_row="0"
            android:textColor="#000000"
            />

        <TextView
            android:textColor="#000000"
            android:id="@+id/productprice"
            android:layout_below="@id/productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.20.000"
            android:textSize="12pt"
            android:layout_marginLeft="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_row="1"
            android:layout_column="0"/>

    <LinearLayout
        android:id="@+id/qtylinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/productprice"
        android:gravity="right"
        android:layout_margin="7dp">

    <Button
        android:id="@+id/kurang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="#EEF7F0"
        android:text="-"
        android:background="#44594D"
        android:layout_column="1"
        android:layout_row="0"
        android:textSize="10pt"

        />


        <TextView
            android:id="@+id/quantity"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textAlignment="center"


            />

        <Button
            android:id="@+id/tambah"
            android:layout_column="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#44594D"
            android:text="+"
            android:textColor="#EEF7F0"
            android:textSize="10pt"

        />

    </LinearLayout>


    <Button
        android:id="@+id/ordermore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qtylinearlayout"
        android:layout_alignParentRight="true"
        android:text="Order More"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="#F6BFA4"
       />


</RelativeLayout>