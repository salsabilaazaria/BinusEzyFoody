<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:orientation="vertical"
            android:background="@drawable/mainbg">
                <ImageButton
                    android:id="@+id/historybutton"
                    android:layout_margin="8dp"
                    android:background="#00FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_list_alt_24"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="right"
                    android:tint="#44594D"
                    />
                <TextView
                    android:layout_marginTop="50dp"
                    android:id="@+id/welcometext"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Welcome to "
                    android:textSize="10pt"
                    android:textColor="#44594D"


                    />


                <TextView
                    android:textColor="#44594D"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Binus EzyFoody"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:paddingBottom="50dp"


                    />


        </LinearLayout>




        <GridLayout
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_marginTop="20dp"
            android:background="#44594D"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="20dp"
            >
                <TextView

                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Your Balance"
                    android:layout_columnSpan="1"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="fill_horizontal"
                    android:textColor="#F6BFA3"
                    android:textSize="10pt"

                    />

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Rp. 100.000"
                    android:layout_columnSpan="1"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="10dp"
                    android:textSize="14pt"
                    android:textColor="#F6BFA3"
                    android:layout_gravity="fill_horizontal"

                    />

                <ImageButton

                    android:layout_column="1"
                    android:layout_rowSpan="2"
                    android:background="#00FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_baseline_add_box_24"
                    android:layout_row="0"
                    android:tint="#F6BFA3"
                    />


        </GridLayout>

        <TextView
            android:id="@+id/lastorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance"
            android:text="Lets Order!"
            android:padding="10dp"
            android:textSize="12pt"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:textColor="#44594D"
            />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastorder"
            android:columnCount="3"
            android:rowCount="1"
            android:weightSum="3"

            >

                <Button
                    android:id="@+id/foodbutton"
                    android:padding="35dp"
                    android:layout_below="@id/lastorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Food"
                    android:drawableTop="@drawable/ic_food"
                    android:textColor="#44594D"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/buttoncategoryborder"
                    android:layout_columnWeight="1"
                    />
                <Button
                    android:id="@+id/drinkbutton"
                    android:layout_below="@id/lastorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Drinks"
                    android:padding="35dp"
                    android:textColor="#44594D"
                    android:drawableTop="@drawable/ic_drink"
                    android:background="@drawable/buttoncategoryborder"
                    android:layout_columnWeight="1"
                    />
                <Button
                    android:id="@+id/snackbutton"
                    android:layout_below="@id/lastorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:padding="35dp"
                    android:text="Snack"
                    android:textColor="#44594D"
                    android:background="@drawable/buttoncategoryborder"
                    android:layout_columnWeight="1"
                    android:drawableTop="@drawable/ic_snack"
                    android:layout_marginRight="2dp"
                    />

        </GridLayout>











</RelativeLayout>